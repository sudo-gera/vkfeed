if [ $# -lt 1 ]
then cd ~
else cd "$1"
fi

if ! [ -d ./vkfeed_repo ]
then git clone --depth 1 https://github.com/sudo-gera/vkfeed ./vkfeed_repo
fi

cd ./vkfeed_repo

if ! [ -f ~/vkfeed ]
then
    echo "cd \"$(pwd)\"" > ~/vkfeed
    echo "python3 vkfeed.py" >> ~/vkfeed
    chmod 744 ~/vkfeed
fi

